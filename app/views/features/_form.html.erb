<%= form_with model:feature  do |form|%>
      <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @features.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
    <div>
    <%= form.label :code %><br>
    <%= form.text_field :code %>
    <% @features.errors.full_messages_for(:code).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :unit_price %><br>
    <%= form.text_field :unit_price %>
    <% @features.errors.full_messages_for(:unit_price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :max_unit_limit %><br>
    <%= form.text_area :max_unit_limit %><br>
    <% @features.errors.full_messages_for(:max_unit_limit).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
