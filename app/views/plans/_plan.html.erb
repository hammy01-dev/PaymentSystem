                        <div class="pricingContent">
                            <ul>
                                <%= render plan.features %>
                            </ul>
                        </div><!-- /  CONTENT BOX-->
                        <div class="pricingTable-sign-up">
                            <%= link_to 'Subscribe', plan_subscriptions_path(plan), method: :post, remote:true ,:class => "btn btn-block"%>
                        </div><!-- BUTTON BOX-->
                    </div>
                </div>






